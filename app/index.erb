
<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>Welcome To RUMingle</h1>
    <% if SyncEngine::logged_in > 0 %>
    <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
      Sync
    </a>
    <a href="<%= url_for :controller => :Settings, :action => :logout %>" class="ui-btn-right" data-icon="star">
	    Logout
	  </a>
    <% else %>
        
    <% end %>
  </div>

  <div data-role="content">
      <br><br><br>
      <a href="<%= url_for :controller => :Settings, :action => :login %>" data-role="button" data-icon="arrow-r">Login</a> <br> <br>
      <a href="<%= url_for :controller => :Settings, :action => :register %>" data-role="button" data-icon="arrow-r">Register</a>
       
  </div>

</div>
